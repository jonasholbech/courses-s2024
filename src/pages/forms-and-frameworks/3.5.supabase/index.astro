    <section>
      <ol>
        <li>Late night learnings</li>
        <li>Live server on mobile</li>
        <li>GET'ting data</li>
        <li>DELETE'ing data</li>
        <li>PATCH'ing data</li>
        <li>POST'ing data</li>
        <li>Code clean-up</li>
      </ol>
    </section>
  </AgendaSection>
  <AgendaSection header="more supabase" />
