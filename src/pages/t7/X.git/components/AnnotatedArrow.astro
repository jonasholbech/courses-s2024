---
import Arrow from "./Arrow.astro";
const { x1, y1, x2, y2, text, offsetX = 0, offsetY = 0 } = Astro.props;
---

<g class="AnnotatedArrow">
  <Arrow x1={x1} y1={y1} x2={x2} y2={y2} />
  <text
    fill="blue"
    x={(+x1 + +x2) / 2 + +offsetX}
    y={(+y1 + +y2) / 2 + +offsetY}
    dominant-baseline="middle"
    text-anchor="middle"
    >{text}
  </text>
</g>

<style>
  text {
    fill: blue;
    font-size: 1rem;
  }
</style>
